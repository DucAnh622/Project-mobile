<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_Menu"
    tools:context=".View.SongArtistActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:padding="10dp">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/BackView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:contentDescription="Back"
            android:background="@drawable/baseline_arrow_back_ios_24"/>
    </RelativeLayout>
    <RelativeLayout
        android:background="@color/background_Menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ImageId"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/slider1"
            android:layout_centerHorizontal="true"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/color_text"/>
        <TextView
            android:id="@+id/artist_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@+id/ImageId"
            android:layout_centerHorizontal="true"
            android:text="Singer: Sơn Tùng"
            android:layout_marginTop="10dp"
            android:textColor="@color/color_text"
            android:textSize="30sp">
        </TextView>
        <TextView
            android:id="@+id/country_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@+id/artist_id"
            android:layout_centerHorizontal="true"
            android:text="Country: Việt Nam"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textSize="24sp">
        </TextView>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/song_artist_id"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </ScrollView>
</LinearLayout>