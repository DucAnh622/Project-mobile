<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_Menu"
    tools:context=".View.ListenActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/back_listen"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="Back listen"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/baseline_arrow_back_ios_24"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/sortButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:contentDescription="add_favorite"
            android:layout_centerVertical="true"
            android:background="@drawable/baseline_more_horiz_24"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_Menu">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ImageId"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/slider1"
            app:civ_border_color="@color/white"
            app:civ_border_width="2dp" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Nơi này có anh"
        android:textSize="25sp"
        android:layout_margin="10dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Sơn Tùng"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginBottom="100dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/current_time_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0:00"
            android:layout_marginStart="15dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/total_time_id"
            android:layout_marginEnd="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="4:27"
            android:textSize="15sp"/>
    </RelativeLayout>
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:progress="50" />
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="random"
            android:layout_marginEnd="50dp"
            android:background="@drawable/baseline_loop_24"
            android:adjustViewBounds="true"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="prev"
            android:layout_marginEnd="20dp"
            android:background="@drawable/baseline_skip_previous_24"
            android:adjustViewBounds="true"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/baseline_play_circle_24"
            android:adjustViewBounds="true"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="next"
            android:layout_marginStart="20dp"
            android:background="@drawable/baseline_skip_next_24"
            android:adjustViewBounds="true"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="replay"
            android:layout_marginStart="50dp"
            android:background="@drawable/baseline_replay_24"
            android:adjustViewBounds="true"/>
    </LinearLayout>
</LinearLayout>