<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="10dp"
    android:background="@color/background_logo"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="false"
    android:clickable="true"
    android:onClick="onSongClick">
    <RelativeLayout
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:background="@color/background_logo"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ImageId"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/slider1"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/white"/>
        <LinearLayout
            android:id="@+id/Title_text"
            android:orientation="vertical"
            android:layout_toEndOf="@+id/ImageId"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp">
            <TextView
                android:id="@+id/song_id"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Song name 1"
                android:maxLines="1"
                android:singleLine="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:ellipsize="marquee"
                android:textSize="22sp"
                android:textColor="@color/color_text"/>
            <TextView
                android:id="@+id/singer_id"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Singer 1"
                android:singleLine="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:maxLines="1"
                android:ellipsize="marquee"
                android:textSize="18sp"
                android:textColor="@color/white"/>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/add_favorite"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_width="30dp"
            android:layout_marginEnd="45dp"
            android:layout_height="30dp"
            android:contentDescription="Add favorite"
            android:background="@drawable/baseline_favorite_border_24"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/add_playlist"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="Add playlist"
            android:visibility="gone"
            android:background="@drawable/baseline_add_circle_outline_24"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/remove_playlist"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="remove playlist"
            android:visibility="gone"
            android:background="@drawable/baseline_remove_circle_outline_24"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>